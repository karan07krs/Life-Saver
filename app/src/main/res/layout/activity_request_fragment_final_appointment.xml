<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".requestFragmentFinalAppointment"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_finalappointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="FINAL APPOINTMENT" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">


                <ImageView
                    android:id="@+id/doctoriamge_requestfragment_finalappointment"
                    android:layout_width="124dp"
                    android:layout_height="128dp"

                    android:foregroundGravity="left"
                    app:srcCompat="@drawable/class_teacher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"

                    android:layout_marginLeft="150dp">

                    <TextView
                        android:id="@+id/name_requestfragment_finalappointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"


                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/email_requestfragment_finalappointment"
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:textSize="17dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/phonenumber_requestfragment_finalappointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#000"
                        android:layout_margin="3dp"
                        android:textSize="17dp"/>

                    <TextView
                        android:id="@+id/specialist_requestfragment_finalappointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:layout_margin="3dp"
                        android:textColor="#000"
                        android:textSize="17dp"/>
                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select date of appointment. *"
            android:layout_margin="3dp"
            android:textColor="#ff00"
            android:textSize="17dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp">

            <RadioGroup
                android:id="@+id/radiogrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select slot of appointment. *"
            android:layout_margin="3dp"
            android:textColor="#ff00"
            android:textSize="17dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
         android:id="@+id/nodateselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No date selected,first select the date"
                android:layout_margin="3dp"
                android:textColor="#898989"
                android:textSize="12dp"
                />

            <RadioGroup
                android:id="@+id/radiogrp_slot1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/radiogrp_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/radiogrp_slot3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        </LinearLayout>
    <TextView
        android:id="@+id/submitrequestfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000080"
        android:text="Submit"
        android:textSize="20dp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="32dp"
        />


</RelativeLayout>